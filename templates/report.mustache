{{!
    @template for event report data

    This template renders a table of data items with headers.

    Example context (json):
    {
        data: [ [item1row 1, item2row 1], [item2row1, item2row2] ]
    }
}}
<div class = "table-responsive">
    <table class = "table table-striped">
        <caption>
            {{# str }} caption, report_simplereport {{/ str }}
        </caption>
        <thead>
            <th>{{# str }} time, report_simplereport {{/ str }} </th>
            <th>{{# str }} event, report_simplereport {{/ str }} </th>
            <th>{{# str }} description, report_simplereport {{/ str }} </th>
        </thead>
        <tbody>
            {{#events}}
                <tr>
                    <td>{{#userdate}} {{timestart}}, %d %B %Y %I:%M %p{{/userdate}}</td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                </tr>
            {{/events}}
        </tbody>
    </table>
</div>